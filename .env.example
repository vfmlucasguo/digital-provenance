# Digital Provenance Configuration
# Security: Set a strong password for Cosign key
COSIGN_PASSWORD=your_secure_password_here

# File paths
COSIGN_KEY_FILE=cosign.key
COSIGN_PUBLIC_KEY_FILE=cosign.pub
AIBOM_OUTPUT_FILE=aibom-final.json
SBOM_INPUT_FILE=base-sbom.json
SBOM_BUNDLE_FILE=aibom.sigstore.json

# Build metadata
BUILD_PLATFORM=Local-AI-Native-Flow
BUILD_DATE=2026-02-10

# Performance optimization
ENABLE_SBOM_CACHE=true
CACHE_DURATION_HOURS=24

# Security features
ENABLE_VULN_SCAN=true
VULN_SEVERITY_THRESHOLD=HIGH

# AI detection settings
AI_DETECTION_VERSION=2.0
AI_CONFIDENCE_THRESHOLD=0.7

# Git integration
AUTO_COMMIT_PROVENANCE=true
PROVENANCE_COMMIT_MESSAGE="chore: update digital provenance files"