name: Digital Provenance CI/CD

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

jobs:
  provenance-check:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        fetch-depth: 0  # Full history for better analysis

    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '18'
        cache: 'npm'

    - name: Install dependencies
      run: npm ci

    - name: Install Syft
      run: |
        curl -sSfL https://raw.githubusercontent.com/anchore/syft/main/install.sh | sh -s -- -b /usr/local/bin

    - name: Install Cosign
      uses: sigstore/cosign-installer@v3
      with:
        cosign-release: 'v2.2.0'

    - name: Install Trivy
      run: |
        sudo apt-get update
        sudo apt-get install wget apt-transport-https gnupg lsb-release
        wget -qO - https://aquasecurity.github.io/trivy-repo/deb/public.key | sudo apt-key add -
        echo "deb https://aquasecurity.github.io/trivy-repo/deb $(lsb_release -sc) main" | sudo tee -a /etc/apt/sources.list.d/trivy.list
        sudo apt-get update
        sudo apt-get install trivy

    - name: Generate SBOM
      run: |
        syft . -o cyclonedx-json > base-sbom.json

    - name: Process AIBOM
      run: |
        python3 scripts/process_aibom_enhanced.py

    - name: Setup Cosign key
      env:
        COSIGN_PRIVATE_KEY: ${{ secrets.COSIGN_PRIVATE_KEY }}
        COSIGN_PASSWORD: ${{ secrets.COSIGN_PASSWORD }}
      run: |
        echo "$COSIGN_PRIVATE_KEY" > cosign.key

    - name: Sign AIBOM
      env:
        COSIGN_PASSWORD: ${{ secrets.COSIGN_PASSWORD }}
      run: |
        cosign sign-blob --key cosign.key --bundle aibom.sigstore.json aibom-final.json

    - name: Verify AIBOM
      run: |
        cosign verify-blob --key cosign.pub --bundle aibom.sigstore.json aibom-final.json

    - name: Vulnerability Scan
      run: |
        trivy sbom aibom-final.json --severity HIGH,CRITICAL --format json --output trivy-results.json

    - name: Upload SBOM artifacts
      uses: actions/upload-artifact@v4
      with:
        name: digital-provenance-${{ github.sha }}
        path: |
          base-sbom.json
          aibom-final.json
          aibom.sigstore.json
          trivy-results.json

    - name: SBOM Diff Analysis
      if: github.event_name == 'pull_request'
      run: |
        # Download previous SBOM from main branch
        git checkout origin/main -- aibom-final.json || echo "No previous SBOM found"
        if [ -f aibom-final.json ]; then
          mv aibom-final.json aibom-previous.json
          git checkout ${{ github.sha }} -- aibom-final.json
          python3 scripts/sbom_diff.py aibom-previous.json aibom-final.json > sbom-diff.md
        fi

    - name: Comment PR with SBOM changes
      if: github.event_name == 'pull_request' && hashFiles('sbom-diff.md') != ''
      uses: actions/github-script@v7
      with:
        script: |
          const fs = require('fs');
          const diff = fs.readFileSync('sbom-diff.md', 'utf8');
          github.rest.issues.createComment({
            issue_number: context.issue.number,
            owner: context.repo.owner,
            repo: context.repo.repo,
            body: `## üîç SBOM Changes Analysis\n\n${diff}`
          });

  security-scan:
    runs-on: ubuntu-latest
    needs: provenance-check

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Download SBOM artifacts
      uses: actions/download-artifact@v4
      with:
        name: digital-provenance-${{ github.sha }}

    - name: Advanced Security Scan
      run: |
        # Additional security checks
        echo "üîç Running advanced security analysis..."

        # Check for known malicious packages
        python3 scripts/malware_check.py aibom-final.json

        # License compliance check
        python3 scripts/license_check.py aibom-final.json

        # Supply chain risk assessment
        python3 scripts/supply_chain_risk.py aibom-final.json